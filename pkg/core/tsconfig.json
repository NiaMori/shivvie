{
  "compilerOptions": {
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,

    "rootDir": ".",

    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node"],
    "module": "NodeNext",
    "customConditions": ["dev:@niamori/shivvie.core"],
    "moduleResolution": "NodeNext"
  },

  "include": [
    "src",
    "rollup.config.ts"
  ]
}
