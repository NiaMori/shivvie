{
  "compilerOptions": {
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,

    "resolveJsonModule": true,

    "paths": {
      "@/*": ["./src/*"]
    },

    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "node"
    ]
  },

  "include": [
    "src",
    "rollup.config.ts"
  ]
}
